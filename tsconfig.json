{
	"compilerOptions": {
		"baseUrl": "./",
		"paths": {
			"@middleware/": ["middleware/*"]
		},
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"target": "es6",
		"module": "commonjs",
		"rootDir": "./",
		"outDir": "./dist",
		"sourceMap": true,
		"resolveJsonModule": true,
		"lib": ["es6", "dom"],
		"esModuleInterop": true
	},
	"include": [
		"./**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}